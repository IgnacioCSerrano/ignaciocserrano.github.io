let factorialRecursivo = n => {
    if (Number.isInteger(n) && n >= 0) {
        if (n === 0) {
           return 1;
        } else {
            return n * factorialRecursivo(n - 1);
        }
    } else {
        console.error("Error: parámetro no es un número entero positivo");
        return 0;
    }
};
